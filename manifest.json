{

  "manifest_version": 2,
  "name": "archiveofmyown",
  "version": "1.0",

  "description": "Allows archiving the contents of a tag on archiveofourown.org.",

  "icons": {
    "48": "icon1.png"
  },

  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["https://archiveofourown.org/tags/*"],
    "js": ["inject.js"]
  }],

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icon1.png",
      "38": "icon1.png"
    },
    "default_popup": "archive.html",
    "show_matches": [
      "https://archiveofourown.org/tags/*"
    ]
  }

}
